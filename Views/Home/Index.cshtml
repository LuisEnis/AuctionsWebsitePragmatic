@using System.Security.Claims
@model IEnumerable<AuctionsWebsitePragmatic.ViewModels.Auction.AuctionListViewModel>

@{
    ViewData["Title"] = "Active Auctions";
}

<h2 class="text-center mt-4">Active Auctions</h2>

<div class="container mt-4">
    @if (!Model.Any())
    {
        <p class="text-center text-muted">No active auctions available.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Current Price</th>
                    <th>Ends On</th>
                    <th>Seller</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var auction in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Auction" asp-action="Details" asp-route-id="@auction.Id" class="text-dark fw-bold">
                                @auction.Title
                            </a>
                        </td>
                        <td>@auction.Description</td>
                        <td>$@auction.CurrentPrice</td>
                        <td>@auction.EndDate.ToLocalTime().ToString("g")</td>
                        <td>@auction.SellerUsername</td>
                        <td>
                            @if (auction.PostedById != int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)))
                            {
                                <a asp-controller="Bid" asp-action="PlaceBid" asp-route-auctionId="@auction.Id" class="btn btn-sm btn-primary">Bid</a>
                            }
                            else
                            {
                                <span class="text-muted">Your auction(You cannot bid)</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>